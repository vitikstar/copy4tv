{#                                                    {% else %}#}
{#                                                        <a href="{{ sort_name }}">{{ column_name }}</a>#}
{#                                                    {% endif %}#}
{#                                                </td>#}
                                                <td class="text-left">Имя</td>
                                                <td class="text-left">Текст сообщения</td>
                                                <td class="text-left">Номер телефона</td>
                                                <td class="text-right">Дата отправки</td>
                                                <td class="text-right">Дата доставки</td>
                                                <td class="text-right">Статус</td>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                {% if (response_result) %}
                                                    {% for item in response_result %}
                                                        <tr>
{#                                                        <td class="text-center">#}
{#                                                            {% if (item['history_id'] in selected) %}#}
{#                                                                <input type="checkbox" name="selected[]" value="{{ item['history_id'] }}" checked="checked" />#}
