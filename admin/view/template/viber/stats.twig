{#                                                            {% endif %}#}
{#                                                        </td>#}
                                                        <td class="text-left">{{ item['name'] }}</td>
                                                        <td class="text-left">{{ item['text_message'] }}</td>
                                                        <td class="text-left">{{ item['recipient'] }}</td>
                                                        <td class="text-left">{{ item['date_send'] }}</td>
                                                        <td class="text-left">{{ item['updated'] }}</td>
                                                        <td class="text-right">{{ item['status'] }}</td>
                                                            </tr>
                                                    {% endfor %} {% else %}
                                                    <tr>
                                                        <td class="text-center" >{{ text_no_results }}</td>
                                                    </tr>
                                                {% endif %}
                                                </tbody>
                                                </table>
                                        </div>
                                        </form>
                                        <div class="row">
                                            <div class="col-sm-6 text-left">{{ pagination }}</div>
                                            <div class="col-sm-6 text-right">{{ results }}</div>
                                        </div>
                </fieldset>
            </div>
        </div>
    </div>
</div>
{{ footer }}