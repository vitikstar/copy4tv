{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="button" data-toggle="tooltip" title="{{ text_version }} {{ version }}" class="btn btn-default">{{ version }}</button>
                <button type="submit" form="form-p-review" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-p-review" class="form-horizontal">
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="token">Token</label>
                                <div class="col-sm-10">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <input type="text" name="viber_newsletter_gateway_auth_token" value="{{ viber_newsletter_gateway_auth_token }}" placeholder="Token" id="token" class="form-control" />
                                            {% if error_viber_newsletter_gateway_auth_token %}
                                                <div class="text-danger">{{ error_viber_newsletter_gateway_auth_token }}</div>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                    <img src="/admin/view/image/Screenshot_8.png" alt="">
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="sender">Отправитель</label>
                                <div class="col-sm-10">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <input type="text" name="viber_newsletter_gateway_sender_name" value="{{ viber_newsletter_gateway_sender_name }}" placeholder="Отправитель" id="sender" class="form-control" />
                                            {% if error_viber_newsletter_gateway_sender_name %}
                                                <div class="text-danger">{{ error_viber_newsletter_gateway_sender_name }}</div>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                    <img src="/admin/view/image/Screenshot_10.png" alt="">

                </form>
            </div>
        </div>
    </div>
</div>
{{ footer }}