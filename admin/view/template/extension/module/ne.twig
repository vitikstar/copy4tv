                                        <li><a href="subscribe-confirmation-stores{{ store['store_id'] }}" data-toggle="tab">{{ store['name'] }}</a></li>
                                    {% endfor %}
                                </ul>
                                <div class="tab-content">
                                    {% for store in stores %}
                                        <div class="tab-pane" id="subscribe-confirmation-stores{{ store['store_id'] }}">
