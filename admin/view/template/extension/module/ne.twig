                                        <input type="radio" name="ne_hide_marketing" value="0" />
                                        {{ text_no }}
                                    {% endif %}
                                </label>
                            </div>
                        </div>
                    </fieldset>
                    <fieldset>
                        <legend>{{ entry_subscribe_confirmation }}</legend>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">{{ entry_subscribe_confirmation }}</label>
                            <div class="col-sm-10">
                                <label class="radio-inline">
                                    {% if (ne_subscribe_confirmation) %}
