                                                                <input type="text" name="ne_subscribe_confirmation_subject[{{ store['store_id'] }}][{{ language['language_id'] }}]" value="{{ ne_subscribe_confirmation_subject[store['store_id']][language['language_id']] is defined ? ne_subscribe_confirmation_subject[store['store_id']][language['language_id']] : '' }}" placeholder="{{ entry_subject }}" id="input-subject-{{ store['store_id'] }}-{{ language['language_id'] }}" class="form-control" />
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label class="col-sm-2 control-label" for="input-message-{{ store['store_id'] }}-{{ language['language_id'] }}">{{ entry_message }}</label>
                                                            <div class="col-sm-10">
                                                                <textarea name="ne_subscribe_confirmation_message[{{ store['store_id'] }}][{{ language['language_id'] }}]" placeholder="{{ entry_message }}" id="input-message-{{ store['store_id'] }}-{{ language['language_id'] }}" class="form-control">{{ ne_subscribe_confirmation_message[store['store_id']][language['language_id']] is defined ? ne_subscribe_confirmation_message[store['store_id']][language['language_id']] : '' }}</textarea>
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <div class="col-sm-10 col-sm-offset-2">
                                                                {{ text_personalisation_tags }}
                                                            </div>
                                                        </div>
                                                    </div>
                                                {% endfor %}
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </fieldset>
