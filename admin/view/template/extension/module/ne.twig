                                                {% endfor %}
                                            </ul>
                                            <div class="tab-content">
                                                {% for language in languages %}
                                                    <div class="tab-pane" id="languages-confirmation-stores{{ store['store_id'] }}-{{ language['language_id'] }}">
                                                        <div class="form-group">
