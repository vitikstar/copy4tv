{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if (error_warning) %}
            <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form" class="form-horizontal">
                    <fieldset>
                        <legend>{{ text_throttle_settings }}</legend>
                        <div class="form-group">
                            <label class="col-sm-2 control-label"><span data-toggle="tooltip" title="{{ help_use_throttle }}">{{ entry_use_throttle }}</span></label>
                            <div class="col-sm-10">
                                <label class="radio-inline">
                                    {% if (ne_throttle) %}
                                        <input type="radio" name="ne_throttle" value="1" checked="checked" />
                                        {{ text_yes }}
                                    {% else %}
                                        <input type="radio" name="ne_throttle" value="1" />
                                        {{ text_yes }}
                                    {% endif %}
                                </label>
                                <label class="radio-inline">
                                    {% if (not ne_throttle) %}
                                        <input type="radio" name="ne_throttle" value="0" checked="checked" />
                                        {{ text_no }}
                                    {% else %}
                                        <input type="radio" name="ne_throttle" value="0" />
                                        {{ text_no }}
                                    {% endif %}
                                </label>
                            </div>
                        </div>
                        <div class="form-group throttle">
                            <label class="col-sm-2 control-label" for="input-throttle-count"><span data-toggle="tooltip" title="{{ help_throttle_emails }}">{{ entry_throttle_emails }}</span></label>
                            <div class="col-sm-10">
                                <input type="text" name="ne_throttle_count" value="{{ ne_throttle_count }}" placeholder="{{ entry_throttle_emails }}" id="input-throttle-count" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group throttle">
                            <label class="col-sm-2 control-label" for="input-throttle-time"><span data-toggle="tooltip" title="{{ help_throttle_time }}">{{ entry_throttle_time }}</span></label>
                            <div class="col-sm-10">
                                <select name="ne_throttle_time" id="input-throttle-time" class="form-control">
                                    <option value="60" {{ ne_throttle_time == '60' ? ' selected="selected"' : "" }}>1</option>
                                    <option value="300" {{ ne_throttle_time == '300' ? ' selected="selected"' : "" }}>5</option>
                                    <option value="600" {{ ne_throttle_time == '600' ? ' selected="selected"' : "" }}>10</option>
                                    <option value="900" {{ ne_throttle_time == '900' ? ' selected="selected"' : "" }}>15</option>
                                    <option value="1800" {{ ne_throttle_time == '1800' ? ' selected="selected"' : "" }}>30</option>
                                    <option value="3600" {{ ne_throttle_time == '3600' ? ' selected="selected"' : "" }}>60</option>
                                    <option value="7200" {{ ne_throttle_time == '7200' ? ' selected="selected"' : "" }}>120</option>
                                    <option value="10800" {{ ne_throttle_time == '10800' ? ' selected="selected"' : "" }}>180</option>
                                    <option value="14400" {{ ne_throttle_time == '14400' ? ' selected="selected"' : "" }}>240</option>
                                </select>
                            </div>
                        </div>
                    </fieldset>
                    <fieldset>
                        <legend>{{ text_smtp_settings }}</legend>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">{{ entry_use_smtp }}</label>
                            <div class="col-sm-10">
                                <label class="radio-inline">
                                    {% if (ne_use_smtp) %}
                                        <input type="radio" name="ne_use_smtp" value="1" checked="checked" />
                                        {{ text_yes }}
                                    {% else %}
                                        <input type="radio" name="ne_use_smtp" value="1" />
                                        {{ text_yes }}
                                    {% endif %}
                                </label>
                                <label class="radio-inline">
                                    {% if (not ne_use_smtp) %}
                                        <input type="radio" name="ne_use_smtp" value="0" checked="checked" />
                                        {{ text_no }}
                                    {% else %}
                                        <input type="radio" name="ne_use_smtp" value="0" />
                                        {{ text_no }}
                                    {% endif %}
                                </label>
                            </div>
                        </div>
                        <div class="form-group smtp">
                            <div class="col-sm-12">
                                <ul class="nav nav-tabs" id="smtp-stores">
                                    array_unshift(stores, {('store_id' : 0, 'name' : text_default) }
                                    {% for store in stores %} )
                                        <li><a href="#smtp-stores{{ store['store_id'] }}" data-toggle="tab">{{ store['name'] }}</a></li>
                                    {% endfor %}
                                </ul>
                                <div class="tab-content">
                                    {% for store in stores %}
                                        <div class="tab-pane" id="smtp-stores{{ store['store_id'] }}">
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label" for="input-smtp-protocol"><span data-toggle="tooltip" title="{{ help_mail_protocol }}">{{ entry_mail_protocol }}</span></label>
                                                <div class="col-sm-10">
                                                    <select name="ne_smtp[{{ store['store_id'] }}][protocol]" id="input-smtp-protocol" class="form-control">
                                                        {% if (ne_smtp[store['store_id']]['protocol'] is defined and (ne_smtp[store['store_id']]['protocol'] == 'mail' or ne_smtp[store['store_id']]['protocol'] == 'mail_phpmailer')) %}
                                                            <option value="mail" selected="selected">{{ text_mail }}</option>
                                                        {% else %}
                                                            <option value="mail">{{ text_mail }}</option>
                                                        {% endif %}
                                                        {% if (ne_smtp[store['store_id']]['protocol'] is defined and (ne_smtp[store['store_id']]['protocol'] == 'smtp' or ne_smtp[store['store_id']]['protocol'] == 'smtp_phpmailer')) %}
                                                            <option value="smtp" selected="selected">{{ text_smtp }}</option>
                                                        {% else %}
                                                            <option value="smtp">{{ text_smtp }}</option>
                                                        {% endif %}
                                                        {% if (ne_smtp[store['store_id']]['protocol'] is defined and ne_smtp[store['store_id']]['protocol'] == 'mailgun') %}
                                                            <option value="mailgun" selected="selected">{{ text_mailgun }}</option>
                                                        {% else %}
                                                            <option value="mailgun">{{ text_mailgun }}</option>
                                                        {% endif %}
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-group mailgun-{{ store['store_id'] }}">
                                                <div class="col-sm-10 col-sm-offset-2">
                                                    <p class="form-control-static">{{ text_mailgun_info }}</p>
                                                </div>
                                            </div>
                                            <div class="form-group mail-{{ store['store_id'] }} smtp-{{ store['store_id'] }} mailgun-{{ store['store_id'] }}">
                                                <label class="col-sm-2 control-label" for="input-smtp-email-{{ store['store_id'] }}">{{ entry_email }}</label>
                                                <div class="col-sm-10">
                                                    <input type="text" name="ne_smtp[{{ store['store_id'] }}][email]" value="{{ ne_smtp[store['store_id']]['email'] is defined ? ne_smtp[store['store_id']]['email'] : '' }}" placeholder="{{ entry_email }}" id="input-smtp-email-{{ store['store_id'] }}" class="form-control" />
                                                </div>
                                            </div>
                                            <div class="form-group smtp-{{ store['store_id'] }}">
                                                <label class="col-sm-2 control-label" for="input-smtp-host-{{ store['store_id'] }}">{{ entry_smtp_host }}</label>
                                                <div class="col-sm-10">
                                                    <input type="text" name="ne_smtp[{{ store['store_id'] }}][host]" value="{{ ne_smtp[store['store_id']]['host'] is defined ? ne_smtp[store['store_id']]['host'] : '' }}" placeholder="{{ entry_smtp_host }}" id="input-smtp-host-{{ store['store_id'] }}" class="form-control" />
                                                </div>
                                            </div>
                                            <div class="form-group smtp-{{ store['store_id'] }} mailgun-{{ store['store_id'] }}">
                                                <label class="col-sm-2 control-label" for="input-smtp-username-{{ store['store_id'] }}">{{ entry_smtp_username }}</label>
                                                <div class="col-sm-10">
                                                    <input type="text" name="ne_smtp[{{ store['store_id'] }}][username]" value="{{ ne_smtp[store['store_id']]['username'] is defined ? ne_smtp[store['store_id']]['username'] : '' }}" placeholder="{{ entry_smtp_username }}" id="input-smtp-username-{{ store['store_id'] }}" class="form-control" />
                                                </div>
                                            </div>
                                            <div class="form-group smtp-{{ store['store_id'] }} mailgun-{{ store['store_id'] }}">
                                                <label class="col-sm-2 control-label" for="input-smtp-password-{{ store['store_id'] }}">{{ entry_smtp_password }}</label>
                                                <div class="col-sm-10">
                                                    <input type="text" name="ne_smtp[{{ store['store_id'] }}][password]" value="{{ ne_smtp[store['store_id']]['password'] is defined ? ne_smtp[store['store_id']]['password'] : '' }}" placeholder="{{ entry_smtp_password }}" id="input-smtp-password-{{ store['store_id'] }}" class="form-control" />
                                                </div>
                                            </div>
                                            <div class="form-group smtp-{{ store['store_id'] }}">
                                                <label class="col-sm-2 control-label" for="input-smtp-port-{{ store['store_id'] }}">{{ entry_smtp_port }}</label>
                                                <div class="col-sm-10">
                                                    <input type="text" name="ne_smtp[{{ store['store_id'] }}][port]" value="{{ ne_smtp[store['store_id']]['port'] is defined ? ne_smtp[store['store_id']]['port'] : '' }}" placeholder="{{ entry_smtp_port }}" id="input-smtp-port-{{ store['store_id'] }}" class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <fieldset>
                        <legend>{{ text_general_settings }}</legend>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-sent-retries"><span data-toggle="tooltip" title="{{ help_sent_retries }}">{{ entry_sent_retries }}</span></label>
                            <div class="col-sm-10">
                                <input type="text" name="ne_sent_retries" value="{{ ne_sent_retries }}" placeholder="{{ entry_sent_retries }}" id="input-sent-retries" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">{{ entry_cron_code }}</label>
                            <div class="col-sm-10">
                                <pre>{{ cron_url }}</pre>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">{{ entry_cron_help }}</label>
                            <div class="col-sm-10">
                                <pre>{{ text_help }}</pre>
                            </div>
                        </div>
                    </fieldset>
                    <fieldset>
                        <legend>{{ entry_list }}</legend>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <ul class="nav nav-tabs" id="list-stores">
                                    {% for store in stores %}
                                        <li><a href="#list-stores{{ store['store_id'] }}" data-toggle="tab">{{ store['name'] }}</a></li>
                                    {% endfor %}
                                </ul>
                                <div class="tab-content">
                                    {% set list_row = {} %}
                                    {% for store in stores %}
                                    <div class="tab-pane" id="list-stores{{ store['store_id'] }}">
                                        <table class="table table-bordered table-hover" id="list{{ store['store_id'] }}">
                                            <thead>
                                            <tr>
                                                <td class="text-left">{{ entry_name }}</td>
                                                <td style="width: 1px;"></td>
                                            </tr>
                                            </thead>
                                            {% set store_id = store['store_id'] %}
                                            {% set list_row = list_row|merge({ store_id : '1'}) %}
                                            {% if (list_data[store['store_id']] is defined and list_data[store['store_id']])  %}
                                            {% for list in list_data[store['store_id']] %}
                                                <tbody id="list-row-{{ store['store_id'] }}-{{ list_row[store['store_id']] }}">
                                                            <tr>
                                                                <td class="text-left">
                                                                    <br/>
                                                                    {% for language in languages %}
                                                                        <div class="input-group">
                                                                            <span class="input-group-addon"><img src="language/{{ language['code'] }}/{{ language['code'] }}.png" title="{{ language['name'] }}" alt="{{ language['name'] }}" /></span>
                                                                            <input type="text" name="ne_marketing_list[{{ store['store_id'] }}][{{ list_row[store['store_id']] }}][{{ language['language_id'] }}]" value="{{ list[language['language_id']] is defined ? list[language['language_id']] : '' }}" class="form-control" />
                                                                        </div>
                                                                        <br/>
                                                                    {% endfor %}
                                                                </td>
                                                                <td class="text-left">
                                                                    <button type="button" onclick="$('#list-row-{{ store['store_id'] }}-{{ list_row[store['store_id']] }}').remove();" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button>
                                            </td>
                                            </tr>
                                                </tbody>
                                                {% set list_row_store_id = list_row[store['store_id']]+1 %}

                                                {% set list_row = list_row|merge({ store_id : list_row_store_id }) %}
                                            {% endfor %}
                                            {% endif %}
                                            <tfoot>
                                            <tr>
                                                <td></td>
                                                <td class="text-left">
                                                    <button type="button" onclick="addList({{ store['store_id'] }});" data-toggle="tooltip" title="{{ button_add_list }}" class="btn btn-primary"><i class="fa fa-plus-circle"></i></button>
                                                </td>
                                            </tr>
                                            </tfoot>
                                        </table>
                                    </div>
{% endfor %}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">{{ entry_hide_marketing }}</label>
                            <div class="col-sm-10">
                                <label class="radio-inline">
                                    {% if (ne_hide_marketing) %}
                                        <input type="radio" name="ne_hide_marketing" value="1" checked="checked" />
                                        {{ text_yes }}
                                    {% else %}
                                        <input type="radio" name="ne_hide_marketing" value="1" />
                                        {{ text_yes }}
