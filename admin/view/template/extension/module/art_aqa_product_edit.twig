{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="button" onclick="$('#input-apply').attr('value', '1'); $('#form-art_aqa_product').submit();" data-toggle="tooltip" title="{{ button_apply }}" class="btn btn-success"><i class="fa fa-check"></i></button>
        <button type="button" onclick="$('#form-art_aqa_product').submit();" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if success %}
    <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-list"></i> {{ heading_title }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-art_aqa_product" class="form-horizontal">
          <input type="hidden" name="art_aqa_product_apply" id="input-apply">
          <fieldset>
            <legend>{{ tab_question }}</legend>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-name">Тема</label>
              <div class="col-sm-10">
                {{ theme }}
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-name">{{ entry_name }}</label>
              <div class="col-sm-10">
                <input type="text" name="name" value="{{ name }}" id="input-name" class="form-control" />
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-email">{{ entry_email }}</label>
              <div class="col-sm-10">
                <input type="text" name="email" value="{{ email }}" id="input-email" class="form-control" />
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-phone">{{ entry_telephone }}</label>
              <div class="col-sm-10">
                <input type="text" name="phone" value="{{ phone }}" id="input-phone" class="form-control" />
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-question">{{ entry_question }}</label>
                <div class="col-sm-10">
                <textarea class="form-control" name="question" style="resize: vertical;min-height: 100px">{{ question }}</textarea>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-date_fake">{{ entry_date_fake }}</label>
              <div class="col-sm-10 date">
                <input type="text" name="date_fake" data-date-format="YYYY-MM-DD" value="{{ date_fake }}"  id="input-date_fake" class="form-control" />
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-contact">{{ entry_status }}</label>
              <div class="col-sm-10">
                <select name="status" class="form-control">
                  <option value="0" {% if status < 1 %} selected="selected" {% endif %} style="background:#f00;color:#fff;">{{ text_in_processing }}</option>
                  <option value="1" {% if status == 1 %} selected="selected" {% endif %} style="background:#000;color:#fff;">{{ text_processed }}</option>
                  <option value="2" {% if status == 2 %} selected="selected" {% endif %} style="background:#8fbb6c;color:#fff;">{{ text_publish }}</option>
                </select>
              </div>
            </div>
          </fieldset>
          <fieldset>
            <legend>{{ tab_answer }}</legend>
            <div class="form-group">
              <div class="col-sm-8">
                <label class="col-sm-3 control-label" for="input-answer_name">{{ entry_answer_name }}</label>
                <div class="col-sm-9">
                  <input class="form-control" name="answer_name" value="{{ answer_name }}">
                </div>
                <div class="clearfix"></div><br>
                <label class="col-sm-3 control-label" for="input-date_answer">{{ entry_date_answer }}</label>
                <div class="col-sm-9 date">
                  <input type="text" name="date_answer" data-date-format="YYYY-MM-DD" value="{{ date_answer }}"  id="input-date_answer" class="form-control" />
                </div>
                <div class="clearfix"></div><br>
                <label class="col-sm-3 control-label">{{ text_notification }}</label>
                <div class="col-sm-9">
                  <label class="radio-inline">
                    <input type="radio" name="notification" value="1"> {{ text_yes }}</label>
                  <label class="radio-inline">
                    <input type="radio" name="notification" value="0" checked="checked"> {{ text_no }}</label>
                </div>
              </div>
              <div class="col-sm-4">
                <label class="col-sm-4 control-label" for="input-image">{{ entry_image }}</label>
                <div class="col-sm-8"><a href="" id="thumb-image" data-toggle="image" class="img-thumbnail"><img src="{{ thumb }}" alt="" title="" data-placeholder="{{ placeholder }}" /></a><input type="hidden" name="image" value="{{ image }}" id="input-image" /></div>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-answer">{{ entry_answer }}</label>
              <div class="col-sm-10">
               <textarea class="form-control" data-toggle="summernote" name="answer" style="resize: vertical;min-height: 100px">{{ answer }}</textarea>
              </div>
            </div>
          </fieldset>
          <div class="table-responsive">
            <table class="table table-bordered">
              <thead>
                <tr>
                  <td colspan="2">{{ text_additional }}</td>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>{{ text_communication }}</td>
                  <td>{{ communication }}</td>
                </tr>
                <tr>
                  <td>{{ text_date_added }}</td>
                  <td>{{ date_added }}</td>
                </tr>
                <tr>
                  <td>{{ text_ip }}</td>
                  <td>{{ ip }}</td>
                </tr>
                {% if forwarded_ip %}
                <tr>
                  <td>{{ text_forwarded_ip }}</td>
                  <td>{{ forwarded_ip }}</td>
                </tr>
                {% endif %}
                <tr>
                  <td>{{ text_user_agent }}</td>
                  <td>{{ user_agent }}</td>
                </tr>
                <tr>
                  <td>{{ text_accept_language }}</td>
                  <td>{{ accept_language }}</td>
                </tr>
              </tbody>
            </table>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<link href="view/javascript/codemirror/lib/codemirror.css" rel="stylesheet" />
<link href="view/javascript/codemirror/theme/monokai.css" rel="stylesheet" />
<script type="text/javascript" src="view/javascript/codemirror/lib/codemirror.js"></script> 
<script type="text/javascript" src="view/javascript/codemirror/lib/xml.js"></script> 
<script type="text/javascript" src="view/javascript/codemirror/lib/formatting.js"></script> 

<script type="text/javascript" src="view/javascript/summernote/summernote.js"></script>
<link href="view/javascript/summernote/summernote.css" rel="stylesheet" />
<script type="text/javascript" src="view/javascript/summernote/summernote-image-attributes.js"></script>
<script type="text/javascript" src="view/javascript/summernote/opencart.js"></script>

<script type="text/javascript">
  $('.date').datetimepicker({
    pickTime: false
  });
</script>
{{ footer }}