<div class="category4level-title">{{ select_category }}</div>
<div class="category4level-items">
    {% for category in categories %}
        <div class="category4level-item">
            <div class="category4level-main">
                <a href="{{ category['href'] }}">
                    <img src="{{ category['thumb'] }}" alt="{{ category['name'] }}" class="img-responsive">
                </a>
        {% if (category['category_id'] == category_id) %}
            <div><a href="{{ category['href'] }}" class="list-group-item active">{{ category['name'] }}</a></div>
        {% else %}
            <div><a href="{{ category['href'] }}" class="list-group-item">{{ category['name'] }}</a></div>
        {% endif %}
            </div>
        {% if ((category['children'])) %}
            <div class="category4level-add">
            {% for child in category['children'] %}
                {% if (child['category_id'] == child_id) %}
                    <a href="{{ child['href'] }}" class="list-group-item active"><span class="list-group-item-line-top"></span><span class="list-group-item-line-bottom"></span>{{ child['name'] }}</a>
                {% else %}
                    <a href="{{ child['href'] }}" class="list-group-item"><span class="list-group-item-line-top"></span><span class="list-group-item-line-bottom"></span>{{ child['name'] }}</a>
                {% endif %}
                {% if ((child['children2']) and (category['category_id'] == category_id)) %}
                    {% for child2 in child['children2'] %}
                        {% if (child2['category_id'] == child_id2) %}
                            <a href="{{ child2['href'] }}" class="list-group-item active"><span class="list-group-item-line-top"></span><span class="list-group-item-line-bottom"></span>{{ child2['name'] }}</a>
                        {% else %}
                            <a href="{{ child2['href'] }}" class="list-group-item"><span class="list-group-item-line-top"></span><span class="list-group-item-line-bottom"></span>{{ child2['name'] }}</a>
                        {% endif %}
                        {% if ((child2['children3']) and (category['category_id'] == category_id)) %}
                            {% for child3 in child2['children3'] %}
                                {% if (child3['category_id'] == child_id3) %}
                                    <a href="{{ child3['href'] }}" class="list-group-item active"><span class="list-group-item-line-top"></span><span class="list-group-item-line-bottom"></span>{{ child3['name'] }}</a>
                                {% else %}
                                    <a href="{{ child3['href'] }}" class="list-group-item"><span class="list-group-item-line-top"></span><span class="list-group-item-line-bottom"></span>{{ child3['name'] }}</a>
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                    {% endfor %}
                {% endif %}
            {% endfor %}
                <a href="{{ category['href'] }}" class="list-group-item-all list-group-item">{{ text_all_category }} {{ category['name'] }}</a>
            </div>
        {% endif %}
        </div>
    {% endfor %}
</div>


