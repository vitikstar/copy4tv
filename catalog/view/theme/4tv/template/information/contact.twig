{{ header }}
<div id="contact-page" class="container category-1">
  <div class="breadcrumb-product-wrap">
{{ column_megamenu }}
    <ul class="breadcrumb">
        {% set total = breadcrumbs|length %}
        {% set counter = 0 %}
        {% for breadcrumb in breadcrumbs %}
            {{ breadcrumb['separator'] }}
            {% set counter = counter + 1 %}
            {% if (counter == total) %}
              <li>{{ breadcrumb['text'] }}</li>
            {% else %}
              <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
            {% endif %}
        {% endfor %}
    </ul>
  </div>
    {% if success %}
      <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}</div>
    {% endif %}
  <div class="ac-row row">
    <div class="ac-col-left">
        {{ column_left }}
    </div>
      {% if column_left and column_right %}
          {% set class = 'col-sm-6' %}
      {% elseif column_left or column_right %}
          {% set class = 'col-sm-9' %}
      {% else %}
          {% set class = 'col-sm-12' %}
      {% endif %}
    <div id="content" class="{{ class }}">
      <div id="html_consult_block">
      <h1 class="ac-personal-title">{{ heading_title }}</h1>
      <div class="contact-address-title">
        <div class="contact-address-title-icon"></div>
        <div class="header-phone-tel-body-contact-item-number-name">
          <div class="header-phone-tel-body-contact-item-name">{{ text_address }}</div>
          <div class="header-phone-tel-body-contact-item-number">{{ address }}</div>
        </div>
      </div>
      <div class="horizontal-line"></div>
        {{ content_top }}
        <div class="contact-map-mob">{{ map }}</div>
      {{ html_consult_block }}</div>
      <div class="contact-for-messages">
        <div class="footer-column-title">{{ text_for_massages }}</div>

        <div class="contact-for-messages-inner">
          <div class="contact-address-title">
            <div class="contact-address-title-icon"></div>
            <div class="header-phone-tel-body-contact-item-number-name">
              <div class="header-phone-tel-body-contact-item-name">{{ text_email }}</div>
              <div class="header-phone-tel-body-contact-item-number">{{ email }}</div>
            </div>
          </div>
          <div class="footer-social-wrap">
            <a href="tg://resolve?domain=shop_4TV" class="footer-social-item-1 footer-social-item"></a>
            <a href="whatsapp://send?phone=%2B380674332270" class="footer-social-item-2 footer-social-item"></a>
            <a href="viber://chat?number=%%2B380674332270" class="footer-social-item-3 footer-social-item"></a>
          </div>
        </div>
      </div>

      <div class="horizontal-line"></div>
      {# Задать вопрос #}
      <div class="horizontal-line"></div>
        <div class="footer-social-follow-wrapper-main">
          <div class="footer-column-title-1 footer-column-title">{{ text_soc }}</div>
          <div class="footer-social-follow-wrap">
            <a href="#" class="footer-social-follow-item-1 footer-social-follow-item"></a>
            <a href="#" class="footer-social-follow-item-2 footer-social-follow-item"></a>
            <a href="#" class="footer-social-follow-item-3 footer-social-follow-item"></a>
            <a href="#" class="footer-social-follow-item-4 footer-social-follow-item"></a>
            <a href="#" class="footer-social-follow-item-5 footer-social-follow-item"></a>
          </div>
        </div>
    </div>
    <div class="ac-col-right">
      <div id="contact-map">{{ map }}</div>
    </div>
  </div>
    {{ content_bottom }}
</div>
{{ footer }}

<script>
  $(document).ready(function() {
    resize($(window).width());
  });
  $(window).on('resize',function () {
    resize($(this).width());
  })

  function resize(width) {
    if (width <= 1670) {
      $('.ac-col-right').css('display','none');
      $('.contact-map-mob').css('display','block');
    }else{
      $('.ac-col-right').css('display','block');
      $('.contact-map-mob').css('display','none');
      var height_html_consult_block = $('#html_consult_block').height();
      console.log(width);
      console.log(height_html_consult_block);
    }
  }

</script>


