<style>
h1
{    
	font-family: "Trebuchet MS","Arial";
	color: #0099FF;
    font-size: 24px;
	padding-left: 5px;
}
p
{
	font-family: "Trebuchet MS","Arial";
	color: #999999;
	padding-left: 5px;
}
td
{
	font-family: "Trebuchet MS","Arial";
	color: #000;
	padding: 5px;
}
input[type=submit]
{
	background-color: #F0F0F0;
    background-repeat: repeat-x;
    border: 1px solid #C4C4C4;
    color: #838383;
    font-family: "Arial";
    font-size: 18px;
    font-weight: bold;
    padding: 5px;
}
input[type=text]
{
	border: 1px #ccc solid;
	width: 160px;
}
input[type=submit]:hover
{
	background-color: #F4FAFD;
    border: 1px solid #D3ECFD;
    color: #2E9CD8;
}
.err
{
	color: red;
	font-family: "Trebuchet MS","Arial";
	font-weight: bold;
	padding-left: 5px;
}
</style>

<h1>{{ confirmform_header }}</h1>
<p>{{ confirmform_message }}</p>
<form action="{{ action }}" method="POST">
{% for key, val in data %}
	<input type="hidden" name="data[{{ key }}]" value='{{ val }}'>
{% endfor %}

<table>
<tr>
	<td>{{ confirmform_entry_code }}*</td>
	<td><input type="text" name="code" value="">{% if error_code  %}<span class="err">{{ error_code }} 
	</span>{% endif %}</td>
</tr>
<tr>
	<td width=80></td>
	<td><input type="submit" value="{{ confirmform_button }}"></td>
</tr>
</table>


</form>