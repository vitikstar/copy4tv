                        <script>
                            $(window).on('load scroll', function () {
                                pii_scroll();
                            });

                            function pii_scroll() {

                                if (window.innerWidth >= 1200) {
                                    var pii_scroll_block = $('#pii-scroll-top').offset().top;
                                    var pii_scroll_current = $(window).scrollTop();
                                    if (pii_scroll_current > pii_scroll_block) {
                                        $('.pii-scroll-wrapper-main').fadeIn(0);

                                        $('#button-cart').appendTo('#left-btn-buy');
                                        $('.center-block-quantity').removeAttr('id');
                                        $('.left-block-quantity').attr('id', 'product');

                                    } else {
                                        $('.pii-scroll-wrapper-main').fadeOut(0);

                                        $('#button-cart').appendTo('#center-btn-buy');
                                        $('.left-block-quantity').removeAttr('id');
                                        $('.center-block-quantity').attr('id', 'product');

                                    }
                                }

                            }

                            $(document).ready(function () {

                                if (window.innerWidth >= 1200) {
                                    $('.pr-nav-tabs a').click(function () {
                                        var attr_href = $(this).attr('href');
                                        setTimeout(function () {
                                            $('.pr-nav-tabs a[href="' + attr_href + '"]').parent().addClass('active').siblings().removeClass('active');
                                        });
                                    });
                                }

                            });

                        </script>
                        <!-- end появляется при прокрутке -->


                        <script>
                            $(document).ready(function () {

                                $('.image-additional-wrap .thumbnails-images a').click(function (e) {
                                    e.preventDefault();

                                    $('.image-additional-wrap li').removeClass('active');
                                    $(this).parent().addClass('active');

                                    var index = $(this).attr('data-index');
                                    var main_popup = $(this).attr('data-main-popup');
                                    var main_img = $(this).attr('data-main-img');

                                    $('.image-main-wrap a').attr('data-index', index);
                                    $('.image-main-wrap a').attr('href', main_popup);
                                    $('.image-main-wrap a img').attr('src', main_img);
                                });


                                $('.image-main-wrap a, .thumbnails-video a').click(function (e) {
                                    e.preventDefault();
                                    var index = $(this).attr('data-index');

                                    $('#product-image-popup .swiper-container').css({'opacity': '0'});
                                    $('#product-image-popup').modal('show');

                                    setTimeout(function () {
                                        gallery_swiper_initialize(index);
                                        $('#product-image-popup .swiper-container').css({'opacity': '1'});
                                    }, 350);

                                    //                      $('#image-popup').modal('hide');
                                });
                            });
                        </script>
                        <script>
                            function gallery_swiper_initialize(index) {
                                var galleryTop = new Swiper('.gallery-top', {
                                    nextButton: '.swiper-button-next',
                                    prevButton: '.swiper-button-prev',
                                    direction: 'horizontal',
                                    loop: false
                                });
                                var galleryThumbs = new Swiper('.gallery-thumbs', {
                                    spaceBetween: 10,
                                    centeredSlides: true,
                                    slidesPerView: 'auto',
                                    touchRatio: 0.2,
                                    slideToClickedSlide: true,
                                    direction: 'horizontal',
                                    loop: false
                                });

                                galleryTop.params.control = galleryThumbs;
                                galleryThumbs.params.control = galleryTop;

                                if (index === '0') {
                                    $('.gallery-top .swiper-wrapper').css({'transform': 'translate3d(0px, 0px, 0px)'});
                                    galleryTop.slideTo(0, false, false);
                                    galleryThumbs.slideTo(0, false, false);
                                } else {
                                    galleryTop.slideTo(index, false, false);
                                    galleryThumbs.slideTo(index, false, false);
                                }

                                var swiper_slide_video = $('.swiper-slide-video').prev().height();
                                $('.swiper-slide-video').height(swiper_slide_video);
                                $('.swiper-slide-video iframe').height(swiper_slide_video);

                            }
                        </script>
                        {% if thumbnails_images_slider %}
                            <script>
                                $('.thumbnails-images').slick({
                                    arrows: true,
                                    slidesToShow: 2,
                                    slidesToScroll: 1,
                                    vertical: true,
                                    verticalSwiping: true,
                                    dots: false,
                                    infinite: false,
                                    responsive: [
                                        {
                                            breakpoint: 1800,
                                            settings: {
                                                slidesToShow: 5,
                                                slidesToScroll: 1,
                                                dots: true
                                            }
                                        },
                                        {
                                            breakpoint: 1365,
                                            settings: {
                                                arrows: true,
                                                slidesToShow: 4,
                                                slidesToScroll: 4,
                                                dots: true
                                            }
                                        },
                                        {
                                            breakpoint: 1200,
                                            settings: {
                                                arrows: true,
                                                slidesToShow: 3,
                                                slidesToScroll: 3,
                                                dots: true
                                            }
                                        },
                                        {
                                            breakpoint: 991,
                                            settings: {
                                                arrows: true,
                                                slidesToShow: 2,
                                                slidesToScroll: 2,
                                                dots: true
                                            }
                                        },
