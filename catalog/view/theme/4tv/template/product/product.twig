<div id="product-product" class="container {% if isMobile %}product-mobile{% endif %}">
    <div class="breadcrumb-product-wrap">
            {{ column_megamenu }}
        <ul class="breadcrumb">
            {% set total = breadcrumbs|length %}
            {% set counter = 0 %}
            {% for breadcrumb in breadcrumbs %}
                {{ breadcrumb['separator'] }}
                {% set counter = counter + 1 %}
                {% if (counter == total) %}
                    <li>{{ breadcrumb['text'] }}</li>
                {% else %}
                    <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
                {% endif %}
            {% endfor %}
        </ul>
    </div>

    {% if isMobile %}
        <h1>{{ product_name }}</h1>
    {% endif %}

    {% if sku %}
        <div class="pr-model-wrap pr-model-wrap-mobile" style="display: none;">
            <div class="pr-model">{{ text_model }} <span>{{ sku }}</span></div>
        </div>
    {% endif %}

    <div class="row">
        <div id="content" class="col-sm-12">
            {{ content_top }}
            <div class="row product-image-info">


                {####################### Компьютерная версия #}
                {% if not isMobile %}

                    <div class="col-sm-6 product-image">
