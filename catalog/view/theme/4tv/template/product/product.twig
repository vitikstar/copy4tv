                                            {% if(metka_id=='new') %}<div class="product-sticker" style="background: #ffc001;">Новинка</div>{% endif %}
                                            {% if(metka_id=='super_price') %}<div class="product-sticker" style="background: #ff6e19;">Суперцена</div>{% endif %}
                                            <a class="thumbnail" data-index="0" href="{{ popup }}"
                                               title="{{ product_name }}"><img src="{{ thumb }}"
                                                                               title="{{ product_name }}"
                                                                               alt="{{ product_name }}"
                                                                               class="img-responsive"/></a></li>
                                    {% endif %}

                                    {% if product_video %}
                                        <li class="image-main-wrap-video" style="display: none;">
                                            <a class="thumbnail" data-index="{{ product_video_index }}"
                                               href="javascript:void(0)">
                                                <iframe class="img-responsive" width="560" height="315"
                                                        src="{{ product_video }}" frameborder="0"
                                                        allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                                                        allowfullscreen></iframe>
